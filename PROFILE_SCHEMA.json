{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CICULLIS Profile Schema",
  "description": "Schema for CICULLIS policy profiles",
  "type": "object",
  "required": ["version", "name", "rules"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Semantic version of the profile"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Profile identifier"
    },
    "description": {
      "type": "string",
      "description": "Human-readable description"
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "primitive", "mode"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$"
          },
          "primitive": {
            "type": "string",
            "enum": [
              "guillotine",
              "irrevocull",
              "attestorium",
              "validexor",
              "limenward",
              "originseal",
              "archicustos",
              "kairoclasp"
            ]
          },
          "mode": {
            "type": "string",
            "enum": ["enforce", "audit"]
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
}
